@model InformsISG.Entities.Dtos.Personel_BilgiDTO
@{
    ViewData["Title"] = "Index";
    var denemee = ViewBag.deneme;
}

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">PERSONEL LİSTESİ</h3>
    </div>
    <div class="card-body">
        <table id="tblPersonelBilgi" class="table table-striped table-row-bordered gy-5 gs-7">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Ad_Soyad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sicil_No)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Tc_No)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                        <tr>
                            <td>
                                @Model.Ad_Soyad
                            </td>
                            <td>
                               @Model.Sicil_No
                            </td>
                            <td>
                               @Model.Tc_No
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@Model.Id">
                                    <i class="fa-regular fa-pen-to-square fa-xl"></i>
                                </a> |
                                <a asp-action="Delete" asp-route-id="@Model.Id">
                                    <i class="fa-regular fa-trash-can fa-xl"></i>
                                </a>
                            </td>
                        </tr>
  
            </tbody>
        </table>

    </div>

</div>
