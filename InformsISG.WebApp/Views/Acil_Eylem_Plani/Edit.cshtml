@model InformsISG.Entities.Dtos.Acil_Eylem_PlaniDTO

@{
    ViewData["Title"] = "Edit";
}

<form asp-action="Edit">

    <div class="card shadow-sm">
        <div class="card-header">
            <h3 class="card-title">ACİL EYLEM PLANI DÜZENLEME</h3>
            <div class="card-toolbar">
                <input type="submit" class="btn btn-success btn-hover-rotate-end" value="DÜZENLE">&nbsp;
                <a href="@Url.Action("Index","Acil_Eylem_Plani")" class="btn btn-danger btn-hover-rotate-start">GERİ DÖN</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <input asp-for="Id" type="hidden" class="form-control" aria-describedby="basic-addon1" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="input-group form-group mb-5">
                        <span class="input-group-text" id="basic-addon1">
                            <i class="fa-solid fa-check-double"></i>
                        </span>
                        <select asp-for="Birim_Id" class="form-control" asp-items="ViewBag.Birim_Id"></select>
                    </div>
                    <label asp-for="Plan_Adi" class="control-label"></label>
                    <div class="input-group form-group mb-5">
                        <span class="input-group-text" id="basic-addon1">
                            <i class="fa-solid fa-align-justify"></i>
                        </span>
                        <input asp-for="Plan_Adi" class="form-control" />
                        <span asp-validation-for="Plan_Adi" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Isveren_Id" class="control-label"></label>
                        <div class="input-group form-group mb-5">
                            <span class="input-group-text" id="basic-addon2">
                                <i class="fa-solid fa-check-double"></i>
                            </span>
                            <select asp-for="Isveren_Id" class="form-control" asp-items="ViewBag.Isveren_Id"></select>
                        </div>

                    </div>
                </div>

                <div class="col-md-8">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <table id="tblBirim" class="table table-striped table-row-bordered gy-5 gs-7">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Dosya)
                                        </th>
                                        <th style="text-align:center">
                                            İşlemler
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <a asp-action="DownloadFileFromFileSystem" asp-route-id="@Model.Id">ACİL EYLEM PLANININ DOSYASI</a>
                                        </td>

                                        <td style="text-align:center">
                                            <a asp-action="DeleteFileFromFileSystem" asp-route-id="@Model.Id" class="menu-link px-3">
                                                SİL
                                            </a>
                                        </td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
</form>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}




}



