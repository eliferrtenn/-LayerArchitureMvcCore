@model InformsISG.Entities.Dtos.Ortam_OlcumDTO 

@{
    ViewData["Title"] = "Details";
}
<div class="">
    <div class=" flex-column " id="kt_wrapper">
        <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
            <div class="post d-flex flex-column-fluid" id="kt_post">
                <div id="kt_content_container" class="container-xxl">
                    <div class="card mb-5 mb-xl-10">
                        <div class="card-body pt-9 pb-0">
                            <ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bolder">
                                <li class="nav-item mt-2">
                                    <a class="nav-link text-active-primary ms-0 me-10 py-5 active" href="#">Genel Bilgi</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card mb-5 mb-xl-10" id="kt_profile_details_view">
                        <div class="card-header cursor-pointer">
                            <div class="card-title m-0">
                                <h3 class="fw-bolder m-0">Ortam Ölçüm Bigileri</h3>
                            </div>
                            <a asp-action="Index" asp-route-id="@Model.Id" class="btn btn-primary align-self-center">Geri Dön</a>
                        </div>
                        <div class="card-body p-9">
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-bold text-muted">Ölçüm Türü</label>
                                <div class="col-lg-8">
                                    <span class="fw-bold fs-6 text-gray-800">@Model.Olcum_Tur</span>
                                </div>
                            </div>
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-bold text-muted">Ölçüm Tarihi</label>
                                <div class="col-lg-8 fv-row">
                                    <span class="fw-bold text-gray-800 fs-6">@Model.Olcum_Tarih</span>
                                </div>
                            </div>
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-bold text-muted">Kontrol Durumu</label>
                                <div class="col-lg-8">
                                    @if (Model.Olcum_Sonuc == true)
                                    {
                                        <a href="#" class="fw-bold fs-6 text-gray-800 text-hover-primary">Uygun</a>
                                    }
                                    else
                                    {
                                        <a href="#" class="fw-bold fs-6 text-gray-800 text-hover-primary">Uygun Değil</a>

                                    }
                                </div>
                            </div>
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-bold text-muted">Ölçüm Birimi</label>
                                <div class="col-lg-8 fv-row">
                                    <span class="fw-bold text-gray-800 fs-6">@Model.Olcum_Birim</span>
                                </div>
                            </div>   
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-bold text-muted">Açıklama</label>
                                <div class="col-lg-8 fv-row">
                                    <span class="fw-bold text-gray-800 fs-6">@Model.Aciklama</span>
                                </div>
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
