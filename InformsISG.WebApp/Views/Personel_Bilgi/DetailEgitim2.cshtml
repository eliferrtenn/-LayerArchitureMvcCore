                    </div>



                    <div class="card mb-5 mb-xl-10" id="kt_profile_details_view">
                        <div class="card-body p-9">
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-bold text-muted">Eğitim Adı</label>
                                <div class="col-lg-8">
                                    <span class="fw-bolder fs-6 text-gray-800">@EgitimTanim.Egitim_Ad</span>
                                </div>
                            </div>
                            <div class="row mb-10">
                                <label class="col-lg-4 fw-bold text-muted">Eğitim Sebebi</label>
                                <div class="col-lg-8">
                                    @if (EgitimTanim.Egitim_Sebep == 0)
                                    {
                                        <span class="fw-bold fs-6 text-gray-800">İşe Giriş Muayenesi</span>
                                    }
                                    else if (EgitimTanim.Egitim_Sebep == 1)
                                    {
                                        <span class="fw-bold fs-6 text-gray-800">Yeni Ekipman</span>

                                    }
                                    else if (EgitimTanim.Egitim_Sebep == 2)
                                    {
                                        <span class="fw-bold fs-6 text-gray-800">Meslek Hastalığı</span>

                                    }
                                    else if (EgitimTanim.Egitim_Sebep == 3)
                                    {
                                        <span class="fw-bold fs-6 text-gray-800">İş Değişikliği</span>

                                    }
                                    else if (EgitimTanim.Egitim_Sebep == 4)
                                    {
                                        <span class="fw-bold fs-6 text-gray-800">İş Kazası</span>

                                    }
                                </div>
                            </div>
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-bold text-muted">
                                    Eğitim Tarihi
                                </label>
                                <div class="col-lg-8 d-flex align-items-center">
                                    <span class="fw-bolder fs-6 text-gray-800 me-2">@EgitimTanim.Egitim_Tarih.Day/@EgitimTanim.Egitim_Tarih.Month/@EgitimTanim.Egitim_Tarih.Year</span>
                                </div>
                            </div>
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-bold text-muted">
                                    Eğitim Türü
                                </label>
                                <div class="col-lg-8">
                                    @if (EgitimTanim.Egitim_Tur == 0)
                                    {
                                        <span class="fw-bold fs-6 text-gray-800">Yüzyüze Eğitim</span>
                                    }
                                    else if (EgitimTanim.Egitim_Tur == 1)
                                    {
                                        <span class="fw-bold fs-6 text-gray-800">Uzaktan Eğitim</span>

                                    }
                                </div>
                            </div>
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-bold text-muted">Eğitim Yeri</label>
                                <div class="col-lg-8">
                                    <span class="fw-bolder fs-6 text-gray-800">@EgitimTanim.Egitim_Yer</span>
                                </div>
                            </div>
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-bold text-muted">Eğitim Yer Adı</label>
                                <div class="col-lg-8">
                                    <span class="fw-bolder fs-6 text-gray-800">@EgitimTanim.Egitim_Yer_Ad</span>
                                </div>
                            </div>
                            <div class="row mb-10">
                                <label class="col-lg-4 fw-bold text-muted">Tekrar Tarihi</label>
                                <div class="col-lg-8">
                                    <span class="fw-bolder fs-6 text-gray-800 me-2">@EgitimTanim.Tekrar_Tarih.Day/@EgitimTanim.Tekrar_Tarih.Month/@EgitimTanim.Tekrar_Tarih.Year</span>
                                </div>
                            </div>
                            <div class="row mb-10">
                                <label class="col-lg-4 fw-bold text-muted">Açıklaması</label>
                                <div class="col-lg-8">
                                    <span class="fw-bold fs-6 text-gray-800">@EgitimTanim.Aciklama</span>
                                </div>
                            </div>

                        </div>

                        <div class="card-header cursor-pointer">
                            <div class="card-title m-0">
                                <h3 class="fw-bolder m-0">Eğitimin Konuları</h3>
                            </div>

                        </div>
                        <div class="card-body p-9">
                            @foreach (var item in EgitimTanimKonuList)
                            {
                                @foreach (var item2 in EgitimKonuAltBaslikListe)
                                {
                                    @if (item.Egitim_Konu_Alt_Baslik_Id == item2.Id)
                                    {
                                        <div class="row mb-7">
                                            <label class="col-lg-4 fw-bold text-muted">@i3. Konu  Adı :</label>
                                            <div class="col-lg-8">
                                                <span class="fw-bolder fs-6">@item2.Alt_Baslik_Ad</span>
                                            </div>
                                        </div>
                                        i3++;
                                    }
                                }

                            }
                        </div>
                        <div class="card-header cursor-pointer">
                            <div class="card-title m-0">
                                <h3 class="fw-bolder m-0">Eğitim Veren Personeller</h3>
                            </div>

                        </div>
                        <div class="card-body p-9">
                            @foreach (var item in EgitimVerenList)
                            {
                                @foreach (var item2 in PersonelList)
                                {
                                    @if (item.Personel_Id == item2.Id)
                                    {
                                        <div class="row mb-7">
                                            <label class="col-lg-4 fw-bold text-muted">@i. Eğitim Veren Adı :</label>
                                            <div class="col-lg-8">
                                                <span class="fw-bolder fs-6">@item2.Ad_Soyad</span>
                                            </div>
                                        </div>
                                        i++;
                                    }
                                }

                            }
                        </div>

                        <div class="card-header cursor-pointer">
                            <div class="card-title m-0">
                                <h3 class="fw-bolder m-0">Eğitime Girecek Personel Listesi</h3>
                            </div>
                        </div>
                        <div class="card-body p-9">
                            @foreach (var item in EgitimeGirecekListe)
                            {
                                @foreach (var item2 in PersonelList)
                                {
                                    @if (item.Personel_Id == item2.Id)
                                    {
                                        <div class="row mb-7">
                                            <label class="col-lg-4 fw-bold text-muted">@i. Eğitim Veren Adı :</label>
                                            <div class="col-lg-8">
                                                <span class="fw-bolder fs-6">@item2.Ad_Soyad </span>
                                            </div>
                                        </div>
                                        i2++;
                                    }
                                }

                            }
                        </div>

                    </div>


                </div>
            </div>
        </div>
    </div>
</div>
