@model InformsISG.Entities.Dtos.Alt_IsverenDTO

@{
    ViewData["Title"] = "Edit";
}
<form asp-action="Edit">
    <div class="card shadow-sm">
        <div class="card-header">
            <h3 class="card-title">ALT İŞVEREN DÜZENLEME</h3>
            <div class="card-toolbar">
                <input type="submit" class="btn btn-success btn-hover-rotate-end" value="KAYDET">&nbsp;
                <a href="@Url.Action("Index","Alt_Isveren")" class="btn btn-danger btn-hover-rotate-start">GERİ DÖN</a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <input asp-for="Id" type="hidden" class="form-control" aria-describedby="basic-addon1" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col-md-6">
                    <label asp-for="Alt_Isveren_Ad" class="control-label"></label>
                    <div class="input-group form-group mb-5">
                        <span class="input-group-text" id="basic-addon1">
                            <i class="fa-solid fa-align-justify"></i>
                        </span>
                        <input asp-for="Alt_Isveren_Ad" class="form-control" />
                        <span asp-validation-for="Alt_Isveren_Ad" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <label asp-for="Notlar" class="control-label"></label>

                    <div class="input-group form-group mb-5">
                        <span class="input-group-text" id="basic-addon2">
                            <i class="fa-solid fa-question"></i>
                        </span>
                        <input asp-for="Notlar" class="form-control" />
                        <span asp-validation-for="Notlar" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-12 mb-5">
                    <span class="form-check-label">
                        @Html.DisplayNameFor(model => model.Kontrol_Edildi)
                    </span>
                    <label class="form-check form-switch form-check-custom form-check-solid">
                        <input class="form-check-input" type="checkbox" asp-for="Kontrol_Edildi" />
                    </label>
                </div>
                </div>
            </div>
    </div>
    <div class="card-footer">

    </div>

</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
