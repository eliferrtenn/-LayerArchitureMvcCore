@model InformsISG.Entities.Dtos.Makine_EkipmanDTO

@{
    ViewData["Title"] = "UploadQRCode";
}


<form asp-action="ReadQRcode" enctype="multipart/form-data" method="post">
    <div class="card shadow-sm">

        <div class="card-header">
            <h3 class="card-title">QR KODU EKLE</h3>
            <div class="card-toolbar">
                <input type="submit" class="btn btn-success btn-hover-rotate-end" value="KAYDET">&nbsp;
                <a href="@Url.Action("Index","Makine_Ekipman")" class="btn btn-danger btn-hover-rotate-start">GERİ DÖN</a>
            </div>
        </div>
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="row">
                    <div class="form-group mb-5">
                        <div class="col-md-10 mb-5">
                            <label asp-for="Ekipman_Kodu" class="control-label"></label>
                            <div class="input-group form-group mb-5">
                                <span class="input-group-text" id="basic-addon1">
                                    <i class="fa-solid fa-align-justify"></i>
                                </span>
                                <input asp-for="Ekipman_Kodu" class="form-control" name="Ekipman_Kodu"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
            </div>
        </div>
    </div>
    <br /> <br /> <br />

</form>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
