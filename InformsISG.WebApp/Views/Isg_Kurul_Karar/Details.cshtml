@model InformsISG.Entities.Dtos.Isg_Kurul_KararDTO

@{
    ViewData["Title"] = "Details";
    var KurulGundemList = (List<InformsISG.Entities.Dtos.Isg_Kurul_Karar_GundemDTO>)ViewBag.KurulGundemList;
    var isg_kararId = ViewBag.Isg_Karar_Id;
    int siraNo = 1;
}
<br />
<br />
<br />
<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">KURUL TOPLANTISI BİLGİLERİ</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 mb-5">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Toplanti_No" class="control-label"></label>
                    <input asp-for="Toplanti_No" class="form-control" />
                    <span asp-validation-for="Toplanti_No" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Tarih" class="control-label"></label>
                    <input asp-for="Tarih" class="form-control" />
                    <span asp-validation-for="Tarih" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6 mb-5">
                <div class="form-group">
                    <label asp-for="Saat" class="control-label"></label>
                    <input asp-for="Saat" class="form-control" />
                    <span asp-validation-for="Saat" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Aciklama" class="control-label"></label>
                    <input asp-for="Aciklama" class="form-control" />
                    <span asp-validation-for="Aciklama" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
    </div>
</div>

<br />
<br />
<br />
<div class="card-body">
    <div class="row">
        <table id="tblBirim" class="table table-striped table-row-bordered gy-5 gs-7">
            <thead>
                <tr>
                    <th>
                        Sıra  No
                    </th>
                    <th>
                        Gündem Maddesi
                    </th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in KurulGundemList)
                {


                    @if (item.Isg_Kurul_Karar_Id == isg_kararId)
                    {
                        <tr>
                            <td>
                                @siraNo
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Maddeler)
                            </td>
                        </tr>
                        siraNo++;
                    }

           
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
