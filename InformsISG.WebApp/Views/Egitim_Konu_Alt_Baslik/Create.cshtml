            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group mb-5">
                            <label asp-for="Alt_Baslik_No" class="control-label"></label>
                            <input asp-for="Alt_Baslik_No" class="form-control" />
                            <span asp-validation-for="Alt_Baslik_No" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-5">
                            <label asp-for="Alt_Baslik_Ad" class="control-label"></label>
                            <input asp-for="Alt_Baslik_Ad" class="form-control" />
