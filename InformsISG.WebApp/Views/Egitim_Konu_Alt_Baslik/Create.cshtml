                        </div>
                        <div class="form-group mb-5">
                            <label asp-for="Tehlike_Tip" class="control-label"></label>
                            <input asp-for="Tehlike_Tip" class="form-control" />
                            <span asp-validation-for="Tehlike_Tip" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-5">
                            <label asp-for="Sure" class="control-label"></label>
                            <input asp-for="Sure" class="form-control" />
                            <span asp-validation-for="Sure" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-5">
                            <label asp-for="Egitim_Konu_Id" class="control-label"></label>
                            <select asp-for="Egitim_Konu_Id" class="form-control" asp-items="ViewBag.Egitim_Konu_Id"></select>
                        </div>
                </div>
            </div>
        </div>
        <div class="card-footer">

        </div>
    </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
