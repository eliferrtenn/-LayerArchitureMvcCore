@model InformsISG.Entities.Dtos.Egitim_TanimlaDTO

@{
    ViewData["Title"] = "Details";
    var EgitimVerenList = (List<InformsISG.Entities.Dtos.Egitim_Veren_PersonelDTO>)ViewBag.EgitimVerenList;
    var EgitimeGirecekListe = (List<InformsISG.Entities.Dtos.Egitim_Personel_AtamaDTO>)ViewBag.EgitimeGirecekListe;
    var PersonelList = (List<InformsISG.Entities.Dtos.Personel_BilgiDTO>)ViewBag.PersonelList;
    var EgitimKonuAltBaslikListe = (List<InformsISG.Entities.Dtos.Egitim_Konu_Alt_BaslikDTO>)ViewBag.EgitimKonuAltBaslik;
    var EgitimTanimKonuList = (List<InformsISG.Entities.Dtos.Egitim_Tanim_KonuDTO>)ViewBag.EgitimTanimKonu;
    int i = 1;
    int i2 = 1;
    int i3 = 1;
}
<div class="">
    <div class=" flex-column " id="kt_wrapper">
        <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
            <div class="post d-flex flex-column-fluid" id="kt_post">
                <div id="kt_content_container" class="container-xxl">
                    <div class="card mb-5 mb-xl-10">
                        <div class="card-body pt-9 pb-0">
                            <div class="d-flex flex-wrap flex-sm-nowrap mb-3">
                            </div>
                            <ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bolder">
                                <li class="nav-item mt-2">
                                    <a class="nav-link text-active-primary ms-0 me-10 py-5 active" href="#">Genel Bilgi</a>
                                </li>
         

                            </ul>
                        </div>
                    </div>
                    <div class="card mb-5 mb-xl-10" id="kt_profile_details_view">
                        <div class="cursor-pointer">
                            <div class="card-header">
                                <h3 class="card-title">EĞİTİM TANIMI EKLEME</h3>
                                <div class="card-toolbar">
                                    <a asp-action="PersonelAta" asp-route-id="@Model.Id" class="btn btn-success btn-hover-rotate-end" style="background-color: #EDE03D">PERSONEL ATA</a>&nbsp;
                                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success align-self-center">DÜZENLE</a>&nbsp;
                                    <a href="@Url.Action("Index","Egitim_Tanimla")" class="btn btn-danger btn-hover-rotate-start">GERİ DÖN</a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-9">
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-bold text-muted">Eğitim Adı</label>
                                <div class="col-lg-8">
                                    <span class="fw-bolder fs-6 text-gray-800">@Model.Egitim_Ad</span>
                                </div>
                            </div>
                            <div class="row mb-10">
                                <label class="col-lg-4 fw-bold text-muted">Eğitim Sebebi</label>
                                <div class="col-lg-8">
                                    @if (Model.Egitim_Sebep == 0)
                                    {
                                        <span class="fw-bold fs-6 text-gray-800">İşe Giriş Muayenesi</span>
                                    }
                                    else if (Model.Egitim_Sebep == 1)
                                    {
                                        <span class="fw-bold fs-6 text-gray-800">Yeni Ekipman</span>

                                    }
                                    else if (Model.Egitim_Sebep == 2)
                                    {
                                        <span class="fw-bold fs-6 text-gray-800">Meslek Hastalığı</span>

                                    }
                                    else if (Model.Egitim_Sebep == 3)
                                    {
                                        <span class="fw-bold fs-6 text-gray-800">İş Değişikliği</span>

                                    }
                                    else if (Model.Egitim_Sebep == 4)
                                    {
                                        <span class="fw-bold fs-6 text-gray-800">İş Kazası</span>

                                    }
                                </div>
                            </div>
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-bold text-muted">
                                    Eğitim Tarihi
                                </label>
                                <div class="col-lg-8 d-flex align-items-center">
                                    <span class="fw-bolder fs-6 text-gray-800 me-2">@Model.Egitim_Tarih.Day/@Model.Egitim_Tarih.Month/@Model.Egitim_Tarih.Year</span>
                                </div>
                            </div>
  
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-bold text-muted">
                                    Eğitim Türü
                                </label>
                                <div class="col-lg-8">
                                    @if (Model.Egitim_Tur == 0)
                                    {
                                        <span class="fw-bold fs-6 text-gray-800">Yüzyüze Eğitim</span>
                                    }
                                    else if (Model.Egitim_Tur == 1)
                                    {
                                        <span class="fw-bold fs-6 text-gray-800">Uzaktan Eğitim</span>

                                    }
                                </div>
                            </div>
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-bold text-muted">Eğitim Yeri</label>
                                <div class="col-lg-8">
                                    <span class="fw-bolder fs-6 text-gray-800">@Model.Egitim_Yer</span>
                                </div>
                            </div>
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-bold text-muted">Eğitim Yer Adı</label>
                                <div class="col-lg-8">
                                    <span class="fw-bolder fs-6 text-gray-800">@Model.Egitim_Yer_Ad</span>
                                </div>
                            </div>
                            <div class="row mb-10">
                                <label class="col-lg-4 fw-bold text-muted">Tekrar Tarihi</label>
                                <div class="col-lg-8">
                                    <span class="fw-bolder fs-6 text-gray-800 me-2">@Model.Tekrar_Tarih.Day/@Model.Tekrar_Tarih.Month/@Model.Tekrar_Tarih.Year</span>
                                </div>
                            </div>
                            <div class="row mb-10">
                                <label class="col-lg-4 fw-bold text-muted">Açıklaması</label>
                                <div class="col-lg-8">
                                    <span class="fw-bold fs-6 text-gray-800">@Model.Aciklama</span>
                                </div>
                            </div>

                        </div>


                        <div class="card-header cursor-pointer">
                            <div class="card-title m-0">
                                <h3 class="fw-bolder m-0">Eğitimin Konuları</h3>
                            </div>

                        </div>
                        <div class="card-body p-9">
                            @foreach (var item in EgitimTanimKonuList)
                            {
                                @foreach (var item2 in EgitimKonuAltBaslikListe)
                                {
                                    @if (item.Egitim_Konu_Alt_Baslik_Id == item2.Id)
                                    {
                                        <div class="row mb-7">
                                            <label class="col-lg-4 fw-bold text-muted">@i3. Konu  Adı :</label>
                                            <div class="col-lg-8">
                                                <span class="fw-bolder fs-6">@item2.Alt_Baslik_Ad</span>
                                            </div>
                                        </div>
                                        i3++;
                                    }
                                }

                            }
                        </div>
                        <div class="card-header cursor-pointer">
                            <div class="card-title m-0">
                                <h3 class="fw-bolder m-0">Eğitim Veren Personeller</h3>
                            </div>

                        </div>
                        <div class="card-body p-9">
                            @foreach (var item in EgitimVerenList)
                            {
                                @foreach (var item2 in PersonelList)
                                {
                                    @if (item.Personel_Id == item2.Id)
                                    {
                                        <div class="row mb-7">
                                            <div class="col-lg-9">
                                                <span class="fw-bold fs-6">@i) @item2.Ad_Soyad </span>
                                            </div>
                                        </div>
                                        i2++;
                                    }
                                }

                            }
                        </div>

                        <div class="card-header cursor-pointer">
                            <div class="card-title m-0">
                                <h3 class="fw-bolder m-0">Eğitime Girecek Personel Listesi</h3>
                            </div>
                        </div>
                        <div class="card-body p-9">
                            @foreach (var item in EgitimeGirecekListe)
                            {
                                @foreach (var item2 in PersonelList)
                                {
                                    @if (item.Personel_Id == item2.Id)
                                    {
                                        <div class="row mb-7">
                                            <div class="col-lg-9">
                                                <span class="fw-bold fs-6">@i) @item2.Ad_Soyad </span>
                                            </div>
                                        </div>
                                        i++;
                                    }
                                }

                            }
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
