@model List<InformsISG.Entities.Dtos.Egitim_Tanim_KonuDTO>

@{
    ViewData["Title"] = "Details";
    var EgitimGirenPersonel = (List<InformsISG.Entities.Dtos.Egitim_Personel_AtamaDTO>)ViewBag.EgitimGirenPersonel;
    var PersonelList = (List<InformsISG.Entities.Dtos.Personel_BilgiDTO>)ViewBag.PersonelList;
    int i = 1;
    var PersonelListe = ViewBag.Liste;
    TempData["EgitimKonuId"] = TempData["EgitimKonuId"];
}
<div class="">
    <div class=" flex-column " id="kt_wrapper">
        <div class="content d-flex flex-column flex-column-fluid" id="kt_content">
            <div class="post d-flex flex-column-fluid" id="kt_post">
                <div id="kt_content_container" class="container-xxl">
                    <div class="card mb-5 mb-xl-10">
                        <div class="card-body pt-9 pb-0">
                            <div class="d-flex flex-wrap flex-sm-nowrap mb-3">
                            </div>
                            <ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bolder">
                                <li class="nav-item mt-2">
                                    <a class="nav-link text-active-primary ms-0 me-10 py-5 active" href="#">Bu Eğitimi Almayanlar</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card mb-5 mb-xl-10" id="kt_profile_details_view">
                        <div class="cursor-pointer">
                            <div class="card-header">
                                <h3 class="card-title">EĞİTİM TANIMI EKLEME</h3>
                                <div class="card-toolbar">
                                    <a href="@Url.Action("CreateKalanEgitim","Egitim_Konu")" class="btn btn-success btn-hover-rotate-end">EĞİTİM TANIMLA </a>&nbsp;
                                    <a href="@Url.Action("KalanEgitim","Egitim_Konu")" class="btn btn-danger btn-hover-rotate-start">GERİ DÖN</a>
                                </div>
                            </div>
                        </div>
                        <div class="card-body p-9">
                            <div class="row mb-7">
                                @foreach (var item in PersonelList)
                                {
                                    @foreach (var item2 in PersonelListe)
                                    {
                                        if (item.Id == item2)
                                        {
                                            <label class="col-lg-4 fw-bold text-muted  text-gray-800">@i. Personel Adı : </label>
                                            <div class="col-lg-8">
                                                <span class="fs-6">@item.Ad_Soyad</span>
                                            </div>
                                            i++;
                                        }
                                    }
                                }




                            </div>



                        </div>
    





                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
