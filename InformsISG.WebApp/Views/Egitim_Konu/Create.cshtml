@model InformsISG.Entities.Dtos.Egitim_KonuDTO

@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create">
    <div class="card shadow-sm">
        <div class="card-header">
            <h3 class="card-title">EĞİTİM EKLEME</h3>

            <div class="card-toolbar">

                <input type="submit" class="btn btn-success btn-hover-rotate-end" value="KAYDET">&nbsp;
                <a href="@Url.Action("Index","Egitim_Konu")" class="btn btn-danger btn-hover-rotate-start">GERİ DÖN</a>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-floating mb-5">
                            <label asp-for="Egitim_Ad" class="control-label" for="floatingInput"></label>
                            <input asp-for="Egitim_Ad" class="form-control" id="floatingInput"  placeholder="name@example.com" />
                            <span asp-validation-for="Egitim_Ad" class="text-danger"></span>
                        </div>
                </div>
            </div>
        </div>

            <div class="card-footer">
 
            </div>
        </div>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}